# Delta configurations
[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true    # use n and N to move between diff sections
  syntax-theme = Monokai Extended
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
