include () {
  [[ -f "$1" ]] && source "$1"
}

LOCALPATH=~/.bashrc_local
MINTDEFAULT=~/.bashrc_mint
include $LOCALPATH
include $MINTDEFAULT
stty -ixon

alias vn='python3 -m venv venv'
alias va='source venv/bin/activate'

alias tmux='tmux -2'
alias tn='tmux new-session'
alias tl='tmux ls'
alias ta='tmux attach -t'
alias tk='tmux kill-session -t'

PYENV_ROOT="$HOME/.pyenv"
if [ -d "$PYENV_ROOT" ]
then
  export PYENV_ROOT
  PATH="$PYENV_ROOT/bin:$PATH"
  eval "$(pyenv init -)"
fi

RUST_CARGO="$HOME/.cargo/bin"

if [ -d "$RUST_CARGO" ]
then
  PATH="$HOME/.cargo/bin:$PATH"
fi

export PATH
