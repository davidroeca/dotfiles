alias vn='virtualenv -p python3 venv'
alias va='source venv/bin/activate'

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

include () {
  [[ -f "$1" ]] && source "$1"
}

LOCALPATH=~/.bashrc_local
include $LOCALPATH

[[ $TERM != screen* ]] && exec tmux -2
